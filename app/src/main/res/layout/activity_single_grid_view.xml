<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singleGridViewActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp"



    >



    <ImageView
        android:id="@+id/item_iconS"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/legumes" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"

        android:padding="10dp">

        <TextView
            android:id="@+id/item_nameS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/epicerie"
            android:gravity="center_horizontal"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_priceS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_nameS"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="xxx"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:id="@+id/moins"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/moins" />

        <TextView
            android:id="@+id/num"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="23dp"
            android:text="1"
            />


        <ImageView
            android:id="@+id/plus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pluss" />

    </LinearLayout>

    <Button
        android:id="@+id/ajouter"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFB54B"
        android:layout_marginBottom="50dp"
        android:padding="15dp"

        android:textAllCaps="false"
        android:textSize="23dp"
        app:cornerRadius="50dp"
        android:text="Ajouter au panier "></Button>



</LinearLayout>